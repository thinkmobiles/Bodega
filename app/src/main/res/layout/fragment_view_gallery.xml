<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/description_padding"
    android:background="@color/fragment_background">

    <android.support.percent.PercentFrameLayout
        android:id="@+id/flButtonsContainer_FVG"
        android:layout_width="match_parent"
        android:layout_height="@dimen/description_buttons_container_height"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/btnVolver_FVG"
            android:layout_width="@dimen/description_back_button_width"
            android:layout_height="@dimen/description_back_button_height"
            android:layout_gravity="start"
            android:background="@drawable/btn_volver" />

        <ImageButton
            android:id="@+id/btnAddEnvio_FVG"
            android:layout_width="@dimen/description_add_button_width"
            android:layout_height="@dimen/description_add_button_height"
            android:layout_gravity="end"
            android:background="@drawable/btn_add_envio"
            android:scaleType="fitCenter" />
    </android.support.percent.PercentFrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/percent_frame_layout_FVG">

        <ImageView

            android:id="@+id/iv_image_FVG"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/btn_close_FVG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/description_padding"
            android:background="@color/fragment_background"
            android:src="@drawable/btn_close" />

        <ImageButton
            android:id="@+id/btn_previous_image_FVG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/description_padding"
            android:background="@color/fragment_background"
            android:src="@drawable/btn_prev" />

        <ImageButton
            android:id="@+id/btn_next_image_FVG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/description_padding"
            android:background="@color/fragment_background"
            android:src="@drawable/btn_next" />
    </RelativeLayout>
</android.support.percent.PercentRelativeLayout>