<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/description_padding"
    android:background="@color/fragment_background"
    android:orientation="horizontal"
    android:padding="@dimen/description_padding">

    <android.support.percent.PercentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="15%">

        <ImageButton
            android:id="@+id/btn_volver_FC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@drawable/btn_volver" />

        <ImageButton
            android:id="@+id/btn_add_envio_FC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/btn_add_envio" />
    </android.support.percent.PercentFrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvRecycler_FG"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:overScrollMode="never"/>
</android.support.percent.PercentFrameLayout>
