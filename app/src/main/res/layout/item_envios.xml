<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/envios_item_height"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivItemLogo_IE"
        android:layout_width="@dimen/envios_icon_width"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/double_padding"
        android:paddingBottom="@dimen/small_padding"
        android:paddingTop="@dimen/small_padding"
        android:src="@android:drawable/ic_dialog_dialer" />

    <TextView
        android:id="@+id/tvItemName_IE"
        style="@style/CommonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btnDeleteItem_IE"
        android:layout_toRightOf="@+id/ivItemLogo_IE"
        android:text="Some item afdjk;ajf fkjfkfjfkj" />

    <ImageButton
        android:id="@+id/btnDeleteItem_IE"
        style="@style/EnviosItem"
        android:layout_toLeftOf="@+id/btnViewItem_IE"
        android:src="@drawable/btn_circle_delete" />

    <ImageButton
        android:id="@+id/btnViewItem_IE"
        style="@style/EnviosItem"
        android:layout_toLeftOf="@+id/btnSendItem_IE"
        android:src="@drawable/btn_circle_see" />

    <ImageButton
        android:id="@+id/btnSendItem_IE"
        style="@style/EnviosItem"
        android:layout_alignParentRight="true"
        android:src="@drawable/btn_circle_send" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/envios_item_divider_height"
        android:layout_alignParentBottom="true"
        android:background="@color/grey" />

</RelativeLayout>