<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="TitleItemSlideMenu" >
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">@dimen/slidingmenu_item_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/slidingmenu_text_size</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LevelOneTitle" >
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/index_text_size</item>
    </style>
</resources>
