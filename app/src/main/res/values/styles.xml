<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ItemSlideMenu">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">@dimen/slidingmenu_item_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/slidingmenu_text_size</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="HeaderSlideMenuItem" parent="ItemSlideMenu">
        <item name="android:background">@drawable/selector_black_btn</item>
        <item name="android:text">@string/inicio</item>
    </style>

    <style name="FooterSlideMenuItem" parent="ItemSlideMenu">
        <item name="android:background">@drawable/selector_black_btn</item>
        <item name="android:text">@string/envios</item>
    </style>

    <style name="LevelOneTitle">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/index_text_size</item>
    </style>

    <style name="LevelTwoTitle">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/level_two_text_width</item>
        <item name="android:textSize">@dimen/level_two_text_size</item>
    </style>

    <style name="EnviosItem">
        <item name="android:background">@null</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="CommonText">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TirajeTab" >
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/tiraje_tab_unselected</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">@dimen/selector_side</item>
        <item name="android:layout_width">@dimen/selector_side</item>
        <item name="android:textSize">@dimen/selector_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EnviosDialogText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_huge</item>
    </style>

    <style name="EnviosDialogButton">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/font_huge</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_white_btn</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
